<div class="row">
  <div class="col-auto">
    <h2> {{thread.title}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Latest post</h3>

    <div>
      title:{{posts.[0].title}}
    </div>
    <div>
      text:{{posts.[0].text}}
    </div>
    <div>
      <img src="{{posts.[0].image_url}}" alt="latest post image">
    </div>
    <div>
      Posted by: {{posts.[0].user.username}}
    </div>

  </div>

</div>


<div class="col-md-6">
  <div>
    Make a new post
    <form action="/api/posts/uploads" method="post" enctype="multipart/form-data">
      <input placeholder="Item" maxlength="100" type="text" name="title" />
      <input placeholder="Description" maxlength="300" type="text" name="text" />
      {{#if isMarketplace}}
      <input placeholder="price" maxlength="200" type="number" min="0" name="price" />
      {{/if}}
      <input style="display: none;" type="text" name="threadId" value="{{thread.id}}" />
      <input type="file" name="upload"> <button type="submit">Submit</button>
    </form>

  </div>
  <div>
    <h3>Other Posts</h3>
    {{#each posts as |post|}}
    {{>history}}
    {{/each}}
  </div>

</div>